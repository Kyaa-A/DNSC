# =============================================================================
# DATABASE CONFIGURATION (Neon)
# =============================================================================
# Neon pooled connection string (for application queries)
DATABASE_URL=

# Neon direct connection string (for migrations)
DIRECT_URL=

# =============================================================================
# AUTHENTICATION (NextAuth.js)
# =============================================================================
# NextAuth URL (your application URL)
NEXTAUTH_URL=http://localhost:3000

# NextAuth secret - Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=

# =============================================================================
# ADMIN CREDENTIALS (For seeding)
# =============================================================================
ADMIN_EMAIL=
ADMIN_PASSWORD=

# =============================================================================
# EMAIL SERVICE (Resend)
# =============================================================================
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxx

# Email from address (use your verified domain or onboarding@resend.dev for testing)
EMAIL_FROM=DNSC Attendance <onboarding@resend.dev>

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# NODE_ENV is managed by Next.js automatically â€” do not set it manually
NEXT_PUBLIC_APP_URL=http://localhost:3000
